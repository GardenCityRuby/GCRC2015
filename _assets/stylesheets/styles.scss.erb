// Override Bootstrap Variables
$brand-primary:                     rgb(221,63,80) !default;
$navbar-height:                     55px !default;
$navbar-default-bg:                 rgba(255, 255, 255, 0.95) !default;
$navbar-default-link-color:         #555 !default;
$navbar-default-link-hover-color:   $brand-primary !default;
$border-radius-large:               2px !default;
$table-bg-hover:                    $brand-primary !default;
$font-size-base:                    16px !default;
$line-height-base:                  1.6 !default;

$gray:                              rgb(240, 240, 240);

//font-weights

$light                              :300;
$regular                            :400;
$semibold                           :600;
$bold                               :700;      // This is not used for JAF
$extrabold                          :800;      // This is not used for JAF
$black                              :900;      // This is not used for JAF

// Imports
@import "bootstrap_custom";
@import "vertical_timeline";

// Custom Variables

// Add your styles here

body {
  font-family: 'jaf-facitweb', 'JAF Facit', Avenir, Verdana, Arial, sans-serif;
  font-weight: $light;
  color: #333;
}

.large-heading { font-size: 2.5em; }

.event-heading {
  font-family: 'abril-display', 'Abril Display', Palatino, 'Palatino Linotype', serif;
  font-weight: $black;
}

h1, h2, h3 {
  font-weight: $bold;
  color: #555;
}

p  {
  font-size: 1.1em;

  @media(max-width: 768px) {
    font-size: 1em;
  }
}

section {
  margin: 50px auto;
}

.navbar > .container .navbar-brand { margin-left: 0; }

.full-width { width: 100%; }

.navbar { margin-bottom: 0px; }

.anchor {
  display: block;
  position: relative;
  top: -40px;
  visibility: hidden;
}

.navbar-brand-logo {
  padding: 3px 0 0 0;


  .nav-logo {
    width: 60px;
    height: auto;
    -webkit-transition: all .3s ease-in-out;
    -moz-transition: all .3s ease-in-out;
    transition: all .3s ease-in-out;
  }
}

.navbar-toggle {
  border: none;
  .icon-bar {
    height: 3px;
  }
}

.navbar-brand {
  padding-top: 4px;

  .nav-logo { width: 45px; }
}

.desktop-thin-nav {
  min-height: 30px;
  .navbar-brand-logo {
    .nav-logo {
      width: 25px;
      height: auto;
    }
  }
  .desktop-navbar-nav {
    li {
      a {
        padding: 3px 0;
      }
    }
  }
}

.navbar-nav {
  float: none;
  margin: 0 auto;
  text-align: center;

  li {
    text-align: center;

    a {
      font-size: 1em;
      font-weight: $regular;
      -webkit-transition: padding .3s ease-in-out;
      -moz-transition: padding .3s ease-in-out;
      transition: padding .3s ease-in-out;
      padding: 25px 0px;
    }

  }

  .nav-register {
    padding-top: 35px;
  }
}

.btn-brand {
  border-color: $brand-primary;
  background-color: $brand-primary;
  color: #fff;

  &:hover {
    color: #fff;
    background-color: darken($brand-primary, 10%);
  }
}

.white-link {
  color: #fff;
  border-bottom: 1px dotted rgba(255, 255, 255, 1);
}

.hero {
  margin-top: 0;

  .jumbotron {
    padding: 100px 0 40px;
    background: url(<%= asset_path 'park.png' %>) no-repeat;
    min-height: 400px;
    text-align: center;
    background-color: #d94152;
    background-position: bottom;
    background-size: contain;

    @media(max-width: 768px) {
      min-height: 300px;
      background-position: 30%;
      background-size: cover;
    }
  }

  h1, h2, h3 {
    color: rgba(0, 0, 0, 0.7);
    text-shadow: 1px 1px 0px rgba(255, 255, 255, 0.3);
  }

  .date {
    color: #fff;
    text-shadow: 0 1px 1px rgba(255, 255, 255, 0.3);
    font-weight: $light;
  }
}

.btn-hero {
  box-shadow: 0 3px 0 rgba(0, 0, 0, 0.4);
  border: none;
  margin: 25px auto;

  &:hover {
    border: none;
  }
}


.section-title {
  font-weight: $semibold;
  margin-bottom: 15px;
  text-align: center;
}

.speakers {
  .speaker {
    margin-bottom: 50px;
    text-align: center;
  }

  img {
    width: 100%;
    max-width: 200px;
  }
  .speaker-name {
    margin-top: 30px;
    margin-bottom: 0;
  }

  .speaker-twitter {
    margin-top: 0px;
    font-size: 0.9em;
  }

  @media(max-width: 768px) {
    width: 100%;
    .speaker-name, .speaker-twitter { font-size: 0.8em; }
  }
}

.no-style-link {
  link-style: none;
  border: none;

  &:hover { border: none; }
}

.sponsors {
  .sponsor {
    @media(max-width: 768px) {
      height: 100%;
      margin-bottom: 30px;
    }

    text-align: center;
    margin-top: 10px;
    margin-bottom: 10px;
    height: 170px;

    /* make sponsor logos vertically center aligned */
    &:before {
      content: '';
      display: inline-block;
      height: 100%;
      vertical-align: middle;
      margin-right: -0.25em;
    }

    a {
      display: inline-block;
      vertical-align: middle;
      img { max-width: 200px; }
    }
  }


  h4 {
    margin-top: 40px;
    margin-bottom: 0px;
  }
}

.center-inline-block { display: inline-block; }

.schedule{
  h3 {
    padding-left: 8px;
  }
  .row {
    margin-top: -15px;
  }
  .table > thead > tr > th {
    font-size: 20px;
    font-weight: 400;
  }
  .table-hover > tbody > tr:hover > td, .table-hover > tbody > tr:hover > th {
    color: #FFF;
  }
}

.venue {
  .address-box {
    background: rgba(255,255,255, 0.9);
    margin-top: -48px;
    margin-left: -9000px;
    height: 400px;
    padding: 25% 30px;
    text-align: right;
    border: 1px solid #fff;

    @media(max-width: 768px) {
      margin-left: 0;
      margin-top: 0;
      text-align: center;
      height: auto;
      padding: 0 30px;

    }
  }

  address {
    p {
      font-size: 1.2em;
      margin: 0;
      line-height: 1.8;
    }

    a {
      margin-top: 40px;
      display: inline-block;
    }

  }

  .map {
    display:block;
    height:400px;
    background: url(<%= asset_path 'lemerdien_location.png' %>) no-repeat;
    background-position: center;
    margin-bottom: 0;

    @media(min-width: 768px) {
      background-position: 35% center;
    }

    @media(max-width: 768px) {
      height: 300px;
    }

    &:hover {
      color: #333;
    }
  }
}

section {
  a {
    color: $brand-primary;
    border-bottom: 1px lighten($brand-primary, 20%) dotted;
    padding-bottom: 2px;

    &:hover {
      text-decoration: none;
      border-bottom: 1px darken($brand-primary, 30%) dotted;
      color: darken($brand-primary, 30%);
    }
  }
}

footer {
  h3 {
    font-size: 1.3em;
    margin-bottom: 5px;
    font-weight: $semibold;
    color: white;
  }

  font-size: 0.9em;
  padding: 20px;
  background: $brand-primary;
  color: white;

  a {
    color: white;
    border-bottom: 1px #fafafa dotted;

    &:hover {
      text-decoration: none;
      border-bottom: 1px #aaa dotted;
      color: darken(#fff, 10%);
    }
  }

  & + .row { margin-top: 25px; }
}

.caption {
  font-style: italic;
  font-size: 0.8em;
  color: lighten($brand-primary, 20%);
}

.program-container {
  margin-top: 40px;

  .sub-headline {
    margin: 50px 0;
    font-style: italic;
    text-align: center;
  }

  .speaker-name {
    margin-right: 30px;
  }

  h3 { line-height: 1.5; }
}

